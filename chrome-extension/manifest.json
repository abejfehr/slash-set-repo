{
    "name": "slash-set-repo",
    "version": "0.5",
    "manifest_version": 2,
    "description": "Companion to Slack slash set repo tool",
    "permissions": [
        "notifications",
        "tabs", "<all_urls>",
        "http://slash-set.ngrok.io/*"
    ],
    "content_scripts": [{
        "matches": ["https://github.com/wealthsimple/*/pull/*"],
        "js": ["scripts/contentscript.js"]
    }],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": true
    }
}