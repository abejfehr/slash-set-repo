{
    "name": "slash-set-repo",
    "version": "0.5",
    "manifest_version": 2,
    "description": "Companion to Slack slash set repo tool",
    "permissions": [
      "storage"
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/mondayrain/*/pull/*"
            ],
            "js": [
                "scripts/jquery-3.2.1.min.js",
                "scripts/contentscript.js"
            ],
            "all_frames": false
        }
    ]
}
